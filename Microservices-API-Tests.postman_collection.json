{
    "info": {
      "name": "Task Management System API",
      "description": "Микросервисная система управления задачами - API тесты",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:3000",
        "type": "string"
      },
      {
        "key": "token",
        "value": "",
        "type": "string"
      },
      {
        "key": "userId",
        "value": "",
        "type": "string"
      },
      {
        "key": "orderId",
        "value": "",
        "type": "string"
      }
    ],
    "item": [
      {
        "name": "Health Checks",
